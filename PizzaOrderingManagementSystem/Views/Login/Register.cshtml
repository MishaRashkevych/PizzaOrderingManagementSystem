@model PizzaOrderingManagementSystem.Models.User

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-white-50">Registration</h1>
<hr />
<div class="row" style="display:flex; justify-content:center">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
                <label asp-for="Email" for="floatingInput"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" id="floatingInput" placeholder="name@example.com" />
                <label asp-for="Name" for="floatingInput"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" id="floatingInput" placeholder="name@example.com" />
                <label asp-for="Password" for="floatingInput"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Phone" class="form-control" id="floatingInput" placeholder="name@example.com" />
                <label asp-for="Phone" for="floatingInput"></label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" id="floatingInput" placeholder="name@example.com" />
                <label asp-for="Address" for="floatingInput"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <div style="display:flex; justify-content:space-between">
                    <a style="color: #198754" asp-action="Login">Back</a>
                    <input type="submit" value="Create" class = "btn btn-outline-success" />
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
