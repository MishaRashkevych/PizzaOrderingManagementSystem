@model PizzaOrderingManagementSystem.ViewModel.CartItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Customize your pizza</h1>

<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Crust)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Crust)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Speciality)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Speciality)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.IsVeg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pizza.IsVeg)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Picture)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Pizza.Picture" alt="Alternate Text" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Details)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Details)
        </dd>
    </dl>
</div>
<div>
    @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
    {
        <table>
            @for (int i = 0; i < Model.SelectedToppings.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.CheckBoxFor(m => m.SelectedToppings[i].Selected)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.SelectedToppings[i].Text)
                        @Html.HiddenFor(m => m.SelectedToppings[i].Value)
                        @Html.HiddenFor(m => m.SelectedToppings[i].Text)
                    </td>
                </tr>
            }
        </table>
        <br />
        <input name="button" type="submit" value="Add more pizza" />
        <input name="button" type="submit" value="To Cart" />
    }
</div>
