@model PizzaOrderingManagementSystem.Models.Order

@{
    ViewData["Title"] = "Confirm";
}

<h1>Confirm</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryCharge)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryCharge)
            <p>Delivery price is free if total sum bigger than 50$</p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div>
    <form action="@Url.Action("Confirm", new{ confirm = true })" method="post"><input type="submit" value="Confirm" /></form>
    <form action="@Url.Action("Confirm", new{ confirm = false  })" method="post"><input type="submit" value="Home page" /></form>
</div>
